{
    "name": "ScreenRecorder",
    "version": "0.0.1",
    "manifest_version": 2,
    "description" : "Extension for screen recording",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon.png",
            "38": "images/icon.png"
        },
        "default_title": "ScreenRecorder",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}
